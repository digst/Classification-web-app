<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0"
xmlns:xsl="http://www.w3.org/1999/XSL/Transform" 
xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
xmlns:owl="http://www.w3.org/2002/07/owl#"
xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
xmlns:skos="http://www.w3.org/2004/02/skos/core#" >
    <xsl:output method="text"/>
    <xsl:strip-space elements="*"/>
    <xsl:template match="/">
     <xsl:text>{&#10;  "concepts": [&#10;</xsl:text>
               
   <xsl:for-each select="//rdf:Description['rdf:type@rdf:resource=http://www.w3.org/2004/02/skos/core#Concept']"> 
        <xsl:text>  {&#10;    "name": "</xsl:text>
        	<xsl:value-of select="skos:prefLabel"/>
        <xsl:text>",&#10;</xsl:text>
        <xsl:text>    "id": "</xsl:text>
        	<xsl:value-of select="@rdf:about"/>
        <xsl:text>",&#10;</xsl:text>
        <xsl:text>    "mor": "</xsl:text>
        	<xsl:value-of select="skos:broader/@rdf:resource"/>
        <xsl:text>",&#10;</xsl:text>
        <xsl:text>    "rod": "</xsl:text>
        	<xsl:value-of select="skos:topConceptOf/@rdf:resource"/>
        <xsl:text>",&#10;</xsl:text>
        <xsl:text>    "definition": "</xsl:text>
        	<xsl:value-of select="skos:definition"/>
        <xsl:text>"&#10;  }</xsl:text>
        <xsl:if test="position()!=last()">, &#10;</xsl:if>
  </xsl:for-each>
      <xsl:text>&#10; ]&#10;}&#10;   </xsl:text>

</xsl:template>
	    		  
</xsl:stylesheet>
